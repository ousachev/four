.container__form{
    padding: 200px 0 166px;
    color: white;
}

.form__title{
    width: 70%;
}

.contact{
    display: flex;
    flex-wrap: wrap;

    &__wrapper{
        font-style: 16px;
        font-weight: 600;
        line-height: 1.88;
        text-align: left;
        width: 47%;
        margin-bottom: 35px;
        display: block;
        position: relative;

        &--name{
            margin-right: 6%;
        }
    
        &--text{
            width: 100%;
            margin-bottom: 55px;
        }
    
        &:hover .contact__input, .contact__input:focus{
            border-color: $yellow;
            transition: 0.2s ease-in-out all;
           
        }
    
        &:hover .contact__icon, &:focus .contact__icon{
            fill: $yellow;
            transition:0.2s ease-in-out all ;
        }
    }
        &__label{
            padding-left: 50px;
            margin-bottom: 5px;
            display: block;
            opacity: 0.3;
            font-weight: 400;
        }

        &__input{
            width: 100%;
            border: 0;
            background: transparent;
            border-bottom: 1px solid white;
            padding: 3px 5px 7px 17px;
            font-size: 18px;
            font-weight: bold;
            line-height:36px;
            outline: none;
            color: white;
            position: relative;
             padding-left: 45px;
            &::-webkit-input-placeholder { color: white !important; }
            &:-ms-input-placeholder { color: white !important; }
            &::-ms-input-placeholder { color: white !important; }
            &::placeholder { color: white !important; } 
        }
    }

.contact__wrapper-row{
    display: flex;
    align-items: center;
}

.contact__submit-button{
    padding: 30px 118px;;
    background-image: linear-gradient(to right, #ed8000 0%, #f29400 100%);
    color: white;
    font-size: 18px;
font-weight: 700;
text-transform: uppercase;

&:hover{
    background-image:linear-gradient(to right, #ff8900 0%, #ff9d00 100%) ;
}
}

.contact__input--text{
    resize: none;
}

.contact__icon{
    width: 30px;
    height: 30px;
    fill: white;
    opacity: 0.3;
    position: absolute;
    top: 40px;
}