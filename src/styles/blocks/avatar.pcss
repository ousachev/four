.user{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.avatar{
    width: 200px;
    height: 200px;
    border-radius: 50%;
    display: block;
    overflow:hidden;
    margin-bottom: 54px;
}

.avatar__pic{
    display: block;
    object-fit: contain;
    width: 100%;
    height: 100%;
}