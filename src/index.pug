include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
     .welcome
      section.hero
        .container.hero__container
          header.hero__header
            .hero__logo
              .logo BA
            .hero__menu
                nav.nav
                  - var menu = ['Главная','Обо мне','Навыки','Работы','Отзывы','Связаться']
                  ul.nav__list
                    each item in menu
                      li.nav__item
                        a(href="").nav__link #{item}
            .hero__links
                - var icons = ['insta','vk','github']
                ul.socials
                  each item in icons
                    li.socials__item
                      a(href="").socials__link    
                        +icon(`${item}`,'socials__icon')  
          .hero__content
            .hero-info
              h3.hero-info__desc Личный сайт<br> веб разработчика
              h1.hero-info__name Олег<br> Усачев
          .hero__buttons
            .scroll-down-btn Скролл
            a(href="").scroll-down-btn__img
              
      section.about
        .container.about__container
          .about__left
            .user
              .avatar
                +image("content/avatar.png", "avatar__pic")
              ul.user__desc
                -
                  var items = [
                    ['Проживаю:', 'Самара'],
                    ['Возраст:', '30 лет'],
                    ['Родился:', '19 апреля 1989'],
                  ]
                each item in items
                  li.user__desc-item
                    .user__key #{item[0]}
                    .user__value #{item[1]}
          .about__right
            h4.about__prologue Привет, меня зовут
            h2.about__title Олег Усачев
            .about__text Я занимаюсь разработкой современных сайтов и приложений.<br>Мне нравится делать интересные и современные проекты.
            .about__ps Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
     .rectangle
     .triangles
      svg.triangles__item(viewBox="0 0 1000 100" preserveAspectRatio="none")
        polygon(points="0,0 0,100 1000,100")
      svg.triangles__item-second(viewBox="0 0 1000 100" preserveAspectRatio="none")
        polygon(points="0,100 1000,100 1000,45")
     .advantages



        