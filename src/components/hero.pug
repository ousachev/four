section.hero
        .container.hero__container
          header.hero__header
            .hero__logo
              .logo BA
            .hero__menu
                nav.nav.header__nav
                  - var menu = ['Главная','Обо мне','Навыки','Работы','Отзывы','Связаться']
                  ul.nav__list
                    each item, index in menu
                      li.nav__item(class=`${index==2 ? 'active' : ''}`)
                        a(href="").nav__link #{item}
            .hero__links
                - var icons = ['insta','vk','github']
                ul.socials
                  each item in icons
                    li.socials__item
                      a(href="").socials__link    
                        +icon(`${item}`,'socials__icon')  
            .hero__mobile
              a(href="#").hero__mobile-hamburger
                span.hero__mobile-hamburger--decor
                span.hero__mobile-hamburger--decor
                span.hero__mobile-hamburger--decor
          .hero__content
            .hero-info
              h3.hero-info__desc Личный сайт<br> веб разработчика
              h1.hero-info__name Олег<br> Усачев
          .hero__buttons
            a(href="").scroll-down-btn__link
              .scroll-down-btn Скролл
              +icon("scroll","scroll-down-btn__pic") 