section(id="first").hero
    .parallax
      +image("content/parallax/2.png","layer layer-1")
      +image("content/parallax/6.png","layer layer-3")
      +image("content/parallax/fog-bg.png","layer layer-4")
      +image("content/parallax/3.png","layer layer-5")
      +image("content/parallax/9.png","layer layer-6")
      +image("content/parallax/8.png","layer layer-7")
      +image("content/parallax/8.png","layer layer-8")
    
    .container.hero__container
          header.hero__header
            .hero__logo
              a(href="").logo BA
            .hero__menu
                nav.nav.header__nav
                  - var menu = ['Главная','Обо мне','Навыки','Работы','Отзывы','Связаться']
                  ul.nav__list
                    each item, index in menu
                      li.nav__item
                        a(href="").nav__link #{item}
            .hero__links
                - var icons = ['insta','vk','github']
                ul.socials
                  each item in icons
                    li.socials__item
                      a(href="").socials__link    
                        +icon(`${item}`,'socials__icon')  
            .hero__mobile
              a(href="#").hero__mobile-hamburger
                span.hero__mobile-hamburger--decor
                span.hero__mobile-hamburger--decor
                span.hero__mobile-hamburger--decor
          .hero__content
            .hero-info
              h3.hero-info__desc Личный сайт<br> веб разработчика
              h1.hero-info__name Олег<br> Усачев
          .hero__buttons
            a(href="#second").scroll-down-btn__link
              .scroll-down-btn Скролл
              +icon("scroll","scroll-down-btn__pic") 